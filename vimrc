set t_ti= t_te=
set t_Co=256
syntax enable
set background=dark
colorscheme base16-material-dark
filetype plugin on
filetype indent on
set encoding=utf8
set nobackup
set nowb
set noswapfile
set expandtab

" Be smart when using tabs ;)
set smarttab

" 1 tab == 4 spaces
set shiftwidth=4
set tabstop=4

set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines